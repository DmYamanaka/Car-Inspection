@model WebApplication1.Fines

@{
    ViewData["Title"] = "Edit";
}

<h2>Редактирование</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IdDriver" class="control-label"></label>
                <select asp-for="IdDriver" class="form-control" asp-items="ViewBag.IdDriver"></select>
                <span asp-validation-for="IdDriver" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdFine" class="control-label"></label>
                <select asp-for="IdFine" class="form-control" asp-items="ViewBag.IdFine"></select>
                <span asp-validation-for="IdFine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFine" class="control-label"></label>
                <input asp-for="DateFine" class="form-control" />
                <span asp-validation-for="DateFine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoFine" class="control-label"></label>
                <input asp-for="PhotoFine" type="file" name="uploadedFile" /><br>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-bottom:29.6%">
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
