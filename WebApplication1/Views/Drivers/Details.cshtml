@model WebApplication1.Drivers

@{
    ViewData["Title"] = "Details";
}
<div style="background-color:aliceblue; border-radius: 10px; padding:1px; margin-bottom:6vh">
    <h2 style="margin:7px">Информация о водителе</h2>


    <hr />
    <dl class="row">
        <div class="col-4">
        </div>
        <div class="col-4" style="margin-left:110px">
            <dd class="">
                <img src="~/photo/@Html.DisplayFor(model => model.Photo)" width="100" height="100" style="margin-left:30px" />
            </dd>
            <dd class="col-sm-10">
                <h4>@Html.DisplayFor(model => model.Name)</h4>
            </dd>
        </div>
        <div class="col-4">
        </div>
    </dl>
    <table class="table table-borderless" style="font-size:16px">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PassportSerial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PassportNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Jobname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.Phone)</td>
                <td>@Html.DisplayFor(model => model.PassportSerial)</td>
                <td>@Html.DisplayFor(model => model.PassportNumber)</td>
                <td>@Html.DisplayFor(model => model.Address)</td>
                <td>@Html.DisplayFor(model => model.Company)</td>
                <td>@Html.DisplayFor(model => model.Jobname)</td>
                <td>@Html.DisplayFor(model => model.Email)</td>
            </tr>
        </tbody>
    </table>
</div>
<br />
<div style="background-color:antiquewhite; border-radius: 10px; padding:1px">
    <h2 style="margin:7px">Информация о штрафе</h2>
    <hr />
    @if (ViewBag.Fine)
    {
        <table class="table table-hover" style="font-size:16px">
            <thead>
                <tr>
                    <th>
                        Описание
                    </th>
                    <th>
                        Размер штрафа
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fines in ViewBag.Fines)
                {
                    <tr>
                        <td>
                            @fines.Description
                        </td>
                        <td>
                            @fines.Fine руб.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <dl class="row">
            <div class="col-4">
            </div>
            <div class="col-4">
            </div>
            <div class="col-4" style="font-size:20px">
                Сумма штрафов: @ViewBag.SumFines руб.
            </div>
        </dl>
        
    }

    else
    {
        <div class="row" style="padding:1px">
            <div class="col-4">
            </div>
            <div class="col-4" style="margin-left:110px">
                <i class="fas fa-check-circle fa-7x" style="color:green; margin-left:65px"></i>
                <h4>Штрафы отсутствуют!</h4>
            </div>
            <div class="col-4">
            </div>

        </div>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
