@model IEnumerable<WebApplication1.Drivers>

@{
    ViewData["Title"] = "Index";
}

<h2>Список водителей</h2>
<div class="row">
    <div class="col-4"><a asp-action="Create">
    <button asp-action="Create" type="button" class="btn btn-success">Добавить водителя</button>
</a>
    </div>
    <div class="col-4"></div>
    <div class="col-4">
        <form asp-controller="Drivers" asp-action="Index">
            <p>
                Имя: <input type="text" name="SearchString" />
                <input type="submit" value="Поиск" />
            </p>
        </form>
    </div>
</div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Photo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PassportSerial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PassportNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    Штраф
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/photo/@Html.DisplayFor(modelItem => item.Photo)" width="75" height="75" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PassportSerial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PassportNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @if (item.Fines.Count != 0)
                        {
                            <i class="fas fa-exclamation-triangle fa-2x" title="Есть штраф!"></i>
                        }
                    </td>
                    <td width="150">
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="far fa-edit fa-2x"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id"><i class="far fa-list-alt fa-2x"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt fa-2x" style="color:tomato"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
