@model PersonalDataModel
@{
    ViewData["Title"] = "Удаление аккаунта";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row" style="margin-bottom:41.1vh">
    <div class="col-md-6">
        <p>
            Удаление этих данных приведет к удалению вашей учетной записи без возможности восстановления.
        </p>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Удалить</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}