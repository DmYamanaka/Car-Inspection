@page
@model DeletePersonalDataModel
@{
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>Удалить личные данные</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Удаление этих данных приведет к безвозвратному удалению вашей учетной записи, и это не может быть восстановлено.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password">Пароль</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <br/>
    <button class="btn btn-danger" type="submit" style="margin-bottom:41.1vh">Удалить данные и закрыть мою учетную запись</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}